<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    <title>{_web.title}</title>

    <link rel="shortcut icon" href="{$basePath}/favicon.ico">

    {control css}
    {control js}

    {block head}{/block}

    <script>
        var basePath = {$basePath};
        var messageDelay = 6000;

        $(document).ready(function () {
            $('.message:not(.forever)').delay(messageDelay).fadeOut();
        });
    </script>
</head>

<body class="body{ifset $slug}-{$slug}{/ifset}">
<script>
    document.body.className += ' js'
</script>

<div class="container">
    <row>
        <div n:foreach="$flashes as $flash" n:class="alert, $flash->type">{$flash->message}</div>
    </row>

    <div class="header">
        <div id="logo">
            <a href="{plink :Web:Page:default}"><img src="{$basePath}{$logo}" alt="logo"></a>
        </div>

        <div id="user">
            {if !$user->isLoggedIn()}
                <li>
                    <a href="{plink :Auth:login, 'backlink' => $backlink}">
                        <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                        Přihlásit
                    </a>
                </li>
            {else}
                <li>Přihlášen jako:
                    <strong>
                        <a href="{plink :Web:Profile:default}">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                            {$user->identity->dbuser->getUsername()}
                        </a>
                    </strong>

                    {if $displayUsersRoles}
                        ({_web.common.in_roles, count($user->roles)}
                        {foreach $user->roles as $role}
                            {$role}{sep}, {/sep}
                        {/foreach})
                    {/if}
                </li>

                {if !$user->identity->dbuser->isMember()}
                    <li>
                        <a href="{plink :Web:Member:default}" style="color: red">
                            <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
                            Nepropojený účet člena
                        </a>
                    </li>
                {/if}

                <li>
                    <a href="{plink :Auth:logout, 'backlink' => $backlink}">
                        <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                        Odhlásit
                    </a>
                </li>

                {if $user->isAllowed('admin', 'access')}
                    <li>
                        <a href="{$basePath}/admin">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                            Administrace
                        </a>
                    </li>
                {/if}
            {/if}
        </div>

        <nav>
            <ul class="nav">
                <li></li>
            </ul>
        </nav>
    </div>

    <row id="main">
        <div id="content" class="{if $sidebar}span9{else}span12{/if}">
            {block main}{/block}
        </div>
        {if $sidebar}
            <div id="sidebar" class="span3">
                {block sidebar}{/block}
            </div>
        {/if}
    </row>

    <row id="footer">
        {$footer}
    </row>
</div>
</body>
</html>
















