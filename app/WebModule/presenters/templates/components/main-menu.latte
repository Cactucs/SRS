{define main-menu $pages}
    <nav class="navbar navbar-default">
        <div class="container">
            <ul class="nav navbar-nav">
                {foreach $pages as $item}
                    {if $item->getSlug() == '/'}
                        <li class="{ifCurrent :Web:Page:default, 'pageId' => null}active{/ifCurrent}">
                            <a href="{plink :Web:Page:default}">{$item->getName()}</a>
                        </li>
                    {else}
                        {if $item->isAllowedForRoles($user->roles)}
                            <li class="{ifCurrent :Web:Page:default, 'pageId' => $item->getId()}active{/ifCurrent}">
                                <a href="{plink :Web:Page:default, 'pageId' => $item->getId()}">{$item->getName()}</a>
                            </li>
                        {/if}
                    {/if}
                {/foreach}
            </ul>
        </div>
    </nav>
{/define}