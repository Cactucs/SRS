<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">

    <title>{_install.common.title}</title>

    <link rel="shortcut icon" href="{$basePath}/favicon.ico">

    {control css}
    {control js}

    {block head}
</head>

<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="{$basePath}/install">{_install.common.heading}</a>
        </div>
    </div>
</nav>

<div class="container" style="margin-top: 50px; min-width: 768px;">
    <div class="row">
        <div class="col-sm-12">
            <h2>{include #header}</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="70"
                     aria-valuemin="0" aria-valuemax="100" style="width: {include #progress}{/block}">
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div n:foreach="$flashes as $flash" n:class="alert, $flash->type" role="alert">{$flash->message}</div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="well">
                {include #content}
            </div>
        </div>
    </div>
</div>
</body>
</html>




