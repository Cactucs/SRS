{**
 *
 *
 * @param string   $basePath web base path
 * @param string   $robots   tell robots how to index the content of a page (optional)
 * @param array    $flashes  flash messages
 *}

<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="description" content="">
	<meta name="robots" content="{$robots}" n:ifset="$robots">
	<title>{block title|striptags}Instalace{/block} | SRS</title>


{widget cssLoader 'nette.css', 'bootstrap.css', 'bootstrap-responsive.css', 'niftygrid/grid.css', 'niftygrid/example.css', 'jquery-ui/jquery-ui.css', 'back/screen.css'}
{widget jsLoader 'jquery-1.8.2.min.js', 'netteForms.js', 'bootstrap.min.js', 'jquery-ui.js'}

    <link rel="shortcut icon" href="{$basePath}/favicon.ico">
	{block head}{/block}
</head>

<body>
<script> document.body.className+=' js' </script>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="brand" href="/install">SRS - Instalace</a>
        </div>
    </div>
</div>
    <div class="container-fluid" style="margin-top: 50px;">
        <div class="row-fluid">
            <h1>{block header}{/block}</h1>
            <div class="span12" style="text-align:center;">
                <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}">
                    {$flash->message}
                </div>
                <div class="well">
               {block #content}
                </div>
            </div>
        </div>
    </div>

</body>
</html>
