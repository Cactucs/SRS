<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">

    <title>{_admin.common.title, [seminar_name => $seminarName]}</title>

    <link rel="shortcut icon" href="{$basePath}/favicon.ico">

    {control css}
    {control js}

    {block head}{/block}
</head>

<body>
<div id="main-menu">
    {import 'components/main_menu.latte'}
    {include main-menu}
</div>

<div class="container-fluid">
    <div id="content" class="row">
        {if $sidebarVisible}
            <div id="sidebar" class="col-sm-3 col-xs-3">
                {include #sidebar}
            </div>
        {/if}

        <div id="main" class="{if $sidebarVisible}col-sm-9 col-xs-9{else}col-sm-12{/if}">
            {snippet flashes}
                <div id="flashes" class="row">
                    <div class="col-sm-12">
                        <div n:foreach="$flashes as $flash" n:class="alert, 'alert-' . $flash->type" role="alert">
                            {$flash->message|noescape}
                        </div>
                    </div>
                </div>
            {/snippet}

            {include #main}
        </div>
    </div>

    <hr>

    <footer>
        <p>{$footer|noescape}</p>
    </footer>
</div>
</body>
</html>




