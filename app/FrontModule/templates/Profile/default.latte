
{block title}
Profil
{/block}
{block content}
<h1>Nastavení profilu</h1>
{form profileForm}
<ul class="errors" n:if="$form->hasErrors()">
    <li n:foreach="$form->errors as $error">{$error}</li>
</ul>
<table>
